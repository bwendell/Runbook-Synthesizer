{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://oracle.com/runbook/schemas/dynamic-checklist.schema.json",
  "title": "DynamicChecklist",
  "description": "Schema for generated troubleshooting checklists",
  "type": "object",
  "required": [
    "alertId",
    "steps",
    "sourceRunbooks",
    "generatedAt",
    "llmProviderUsed"
  ],
  "properties": {
    "alertId": {
      "type": "string",
      "description": "ID of the triggering alert",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "description": "High-level summary of what this checklist addresses"
    },
    "steps": {
      "type": "array",
      "description": "Ordered list of troubleshooting steps",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/ChecklistStep"
      }
    },
    "sourceRunbooks": {
      "type": "array",
      "description": "Paths to runbooks that contributed to this checklist",
      "items": {
        "type": "string"
      }
    },
    "generatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp when this checklist was generated",
      "format": "date-time"
    },
    "llmProviderUsed": {
      "type": "string",
      "description": "Which LLM provider was used for generation",
      "minLength": 1
    }
  },
  "definitions": {
    "ChecklistStep": {
      "type": "object",
      "description": "Single step in a generated troubleshooting checklist",
      "required": [
        "order",
        "instruction"
      ],
      "properties": {
        "order": {
          "type": "integer",
          "description": "The step number for ordering",
          "minimum": 1
        },
        "instruction": {
          "type": "string",
          "description": "The actionable instruction text",
          "minLength": 1
        },
        "rationale": {
          "type": "string",
          "description": "Why this step matters for this specific alert"
        },
        "currentValue": {
          "type": "string",
          "description": "The current observed value (e.g., 'Memory: 92%')"
        },
        "expectedValue": {
          "type": "string",
          "description": "The expected/healthy value (e.g., 'Should be below 80%')"
        },
        "priority": {
          "type": "string",
          "description": "The urgency of this step",
          "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
        },
        "commands": {
          "type": "array",
          "description": "Executable commands to run",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
